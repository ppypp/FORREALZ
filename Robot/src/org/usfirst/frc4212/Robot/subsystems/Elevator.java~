    /*
     * This raises the elevator
     */
    public void up(double d) {
		while(!elevHighLS.get() && OI.jB3.get()){ //While not at top and button is pressed
			spark2.set(.5);
		}
	}
	/*
     * This lowers the elevator
     */
	public void down(double d) {
		while(!elevLowLS.get() && OI.jB4.get()){
			spark2.set(-.5);
		}
	}
	/*
     * This stop motor on the elevator
     */
	public void stop() {
		spark2.set(0);
	}
}

